<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.res260.NFCProject.CheckInActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample Text"
        android:id="@+id/textview_team"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sample Name"
        android:id="@+id/textview_checkin_name"
        android:layout_below="@+id/textview_team"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textSize="30dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/terrorist_cercle"
        android:layout_gravity="center_horizontal"
        android:id="@+id/NFCSpotTerro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <View
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/antiterrorist_cercle"
        android:layout_gravity="center_horizontal"
        android:id="@+id/NFCSpotAntiTerro"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="76dp" />

    <TextView
        android:text="@string/place_tag_behind"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="77dp"
        android:id="@+id/textView2"
        android:elevation="1dp"
        android:textSize="18sp"
        android:textColor="@color/background_suivant"
        android:textAlignment="center"
        android:layout_alignBottom="@+id/NFCSpotTerro"
        android:layout_alignStart="@+id/NFCSpotTerro"/>
</RelativeLayout>
